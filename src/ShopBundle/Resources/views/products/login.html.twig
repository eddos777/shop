{% extends 'base.html.twig' %}

{% block body %}
    <div id="login-page" class="row">
        <div class="col s12 z-depth-4 card-panel">
            <div class="row margin">
                <div class="col s9 offset-s3">
                    <h5>Login to your account</h5>
                </div>
            </div>
            {% if error %}
                <div class="row margin">
                    <div class="col s9 offset-s3">
                        {{ error.messageKey }}
                    </div>
                </div>
            {% endif %}
            <form class="login-form" method="post" action="{{ path('login') }}">
                <div class="row margin">
                    <div class="input-field col s6 offset-s3">
                        <i class="mdi-social-person-outline prefix"></i>
                        <input id="name" type="text" name="_name" tabindex="1" value="{{ last_username }}" />
                        <label for="name" class="center-align">Email</label>
                    </div>
                </div>
                <div class="row margin">
                    <div class="input-field col s6 offset-s3">
                        <i class="mdi-social-person-outline prefix"></i>
                        <input id="password" type="password" name="_passsword" tabindex="2" />
                        <label for="password" class="center-align">Password</label>
                    </div>
                </div>
                <div class="row margin">
                    <div class="input-field col s6 offset-s6">
                        <button class="btn waves-effect waves-light" type="submit" name="action">
                            Login
                        </button>
                    </div>
                </div>

            </form>
        </div>
    </div>
{% endblock %}